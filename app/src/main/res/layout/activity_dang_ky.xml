<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".DangKy">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:textSize="26sp"
            android:gravity="center"
            android:text="Đăng ký"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Tài Khoản"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <EditText
            android:maxLength="10"
            android:inputType="phone"
            android:id="@+id/nhaptk"
            android:textSize="18sp"
            android:hint="  Nhập số điện thoại"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Mật Khẩu"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <EditText
            android:id="@+id/nhapmk"
            android:textSize="18sp"
            android:hint="  Nhập mật khẩu"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="  Họ tên"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <EditText
            android:id="@+id/nhaphoten"
            android:textSize="18sp"
            android:hint="  Nhập Họ Tên"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Email"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/nhapemail"
            android:textSize="18sp"
            android:hint="  Nhập số Email"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Giới tính"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <RadioGroup
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/nam"
                android:textSize="19sp"
                android:text="Nam"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></RadioButton>
            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/nu"
                android:textSize="19sp"
                android:text="Nữ"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="@drawable/bo_tron_vien"
            android:id="@+id/btndanky"
            android:text="Đăng Ký"
            android:layout_margin="25dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Button>
        <Button
            android:background="@drawable/bo_tron_vien"
            android:id="@+id/btndannhap"
            android:text="Đăng Nhập"
            android:layout_margin="25dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Button>
    </LinearLayout>



</LinearLayout>