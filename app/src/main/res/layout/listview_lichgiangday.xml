<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center"
            android:id="@+id/tvstt_lichgiangday"
            android:background="#89D3F4"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_weight="6.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_buoiday"
                    android:background="#EDE389"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_ngayday"
                    android:background="#85F389"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/tv_thongtinmon"
                android:background="#F496B6"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>